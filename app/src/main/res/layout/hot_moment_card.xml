<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text=" Top Comment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/iv_userpic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username"

                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"

                    android:text="commmmmmmmmmmmmment" />



                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="1 hour ago" />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_gravity="bottom"
                        android:orientation="horizontal">

                    <com.ldoublem.thumbUplib.ThumbUpView
                        android:id="@+id/tpv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cracksColor="#33475f"
                        app:edgeColor="#9d55b8"
                        app:fillColor="#ea8010"
                        app:unlikeType="1" />

                    <TextView
                        android:id="@+id/tv_likeNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text=" 1k" />

                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/imgbtn_comment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                            android:src="@drawable/im_snsimg" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lv_reply"
                        android:background="#F5F5F5"
                        android:listSelector="#F5F5F5">

                    </ListView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>